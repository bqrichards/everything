{
	"openapi": "3.0.1",
	"info": {
		"version": "1.0.0",
		"title": "Everything API",
		"description": "API used by Everything frontend"
	},
	"servers": [
		{
			"url": "http://localhost:5000/api/"
		}
	],
	"paths": {
		"/library": {
			"get": {
				"summary": "Get Media Library",
				"operationId": "getLibrary",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"canFlush": {
											"type": "boolean",
											"description": "Whether there is modified Media to flush"
										},
										"containsDuplicates": {
											"type": "boolean",
											"description": "Whether there are duplicate Media"
										},
										"media": {
											"type": "array",
											"items": {"$ref": "#/components/schemas/Media"},
											"description": "List of Media info"
										}
									}
								}
							}
						}
					}
				}
			}
		},
		"/media/{mediaId}": {
			"get": {
				"summary": "Get Media Information",
				"operationId": "getMediaInfo",
				"parameters": [
					{
						"in": "path",
						"name": "mediaId",
						"schema": {
							"type": "integer"
						},
						"required": true,
						"description": "Media ID"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Media"
								}
							}
						}
					},
					"400": {
						"description": "Media ID not found",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HTTPError"
								}
							}
						}
					}
				}
			}
		},
		"/media/{mediaId}/edit": {
			"patch": {
				"summary": "Edit Media Information",
				"operationId": "editMediaInfo",
				"parameters": [
					{
						"in": "path",
						"name": "mediaId",
						"schema": {
							"type": "integer"
						},
						"required": true,
						"description": "Media ID"
					}
				],
				"requestBody": {
					"description": "Partial Media",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"title": "partialMedia",
								"type": "object",
								"properties": {
									"date": {
										"type": "string",
										"format": "date",
										"description": "UTC Date"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Media"
								}
							}
						}
					},
					"400": {
						"description": "Media ID not found",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HTTPError"
								}
							}
						}
					}
				}
			}
		},
		"/thumbnail/{mediaId}": {
			"get": {
				"summary": "Get Media Thumbnail",
				"operationId": "getMediaThumbnail",
				"parameters": [
					{
						"in": "path",
						"name": "mediaId",
						"schema": {
							"type": "integer"
						},
						"required": true,
						"description": "Media ID"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"image/jpeg": {
								"schema": {
									"type": "string",
									"format": "binary"
								}
							}
						}
					},
					"400": {
						"description": "Media ID not found",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HTTPError"
								}
							}
						}
					}
				}
			}
		},
		"/media/visual/{mediaId}": {
			"get": {
				"summary": "Get Media Visual",
				"operationId": "getMediaVisual",
				"parameters": [
					{
						"in": "path",
						"name": "mediaId",
						"schema": {
							"type": "integer"
						},
						"required": true,
						"description": "Media ID"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"image/jpeg": {
								"schema": {
									"type": "string",
									"format": "binary"
								}
							}
						}
					},
					"400": {
						"description": "Media ID not found",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HTTPError"
								}
							}
						}
					}
				}
			}
		},
		"/upload-media": {
			"post": {
				"summary": "Upload Media to Library",
				"operationId": "uploadMedia",
				"requestBody": {
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"properties": {
									"file[]": {
										"type": "array",
										"description": "Media selected to upload",
										"items": {
											"type": "string",
											"format": "binary"
										}
									}
								}
							}
						}
					}
				},
				"responses": {
					"400": {
						"description": "No Files Found",
						"content": {
							"application/json": {
								"schema": {
									"type": "boolean"
								}
							}
						}
					}
				}
			}
		},
		"/flush": {
			"get": {
				"summary": "Flush Media Library",
				"operationId": "flushMedia",
				"responses": {
					"204": {
						"description": "OK"
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"Media": {
				"type": "object",
				"description": "Media",
				"properties": {
					"id": {
						"type": "integer",
						"description": "Media ID"
					},
					"date": {
						"type": "string",
						"description": "Datetime in ISO 8601 format"
					},
					"location": {
						"type": "object",
						"description": "Location media was taken",
						"properties": {
							"lat": {
								"type": "number",
								"format": "float",
								"description": "Latitude"
							},
							"lon": {
								"type": "number",
								"format": "float",
								"description": "Longitude"
							}
						},
						"required": [
							"lat",
							"lon"
						]
					}
				},
				"example": {
					"id": 10,
					"date": "2021-05-23T22:31:11+00:00",
					"location": {
						"lat": 42.01547,
						"lon": -93.67865
					}
				},
				"required": [
					"id"
				]
			},
			"HTTPError": {
				"type": "object",
				"description": "HTTP Error",
				"properties": {
					"detail": {
						"type": "string",
						"description": "A human-readable description of the specific error"
					},
					"type": {
						"type": "string",
						"description": "A URL to a document describing the error condition"
					},
					"title": {
						"type": "string",
						"description": "A short, human-readable title for the general error type"
					},
					"status": {
						"type": "integer",
						"description": "HTTP status code"
					}
				}
			}
		}
	}
}